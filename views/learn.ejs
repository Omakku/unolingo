    <!-- SCRIPT TO MAKE CERTAIN LESSONS INACESSIBLE ON THIS PAGE BASED ON USER SCORE-->
    <script>
      // IF STATEMENT TO PREVENT TOTAL_SCORE FROM RETURNING NULL AND CRASHING PAGE
      if (`<%= myUser.total_score %>` > 0) {
        userScore = `<%= myUser.total_score %>`;
      } else {
        userScore = 0;
      }
      console.log(userScore);

      function disableTier(element) {
        element.style.filter = "blur(0.5rem)";
        element.style.pointerEvents = "none";
      }

      function lockTier(element) {
        element.style.visibility = "visible";
      }

      // Use the userScore value to modify CSS properties
      const tier1 = document.getElementById("tier1");
      const tier2 = document.getElementById("tier2");
      const tier3 = document.getElementById("tier3");
      const tier4 = document.getElementById("tier4");
      const tierLock1 = document.getElementById("tierLock1");
      const tierLock2 = document.getElementById("tierLock2");
      const tierLock3 = document.getElementById("tierLock3");
      const tierLock4 = document.getElementById("tierLock4");

      switch (true) {
        case userScore >= 900:
          console.log("Platinum Rank!");
          break;

        case userScore >= 600:
          console.log("Gold Rank!");
          lockTier(tierLock4);
          disableTier(tier4);
          break;

        case userScore >= 300:
          console.log("Silver Rank!");
          lockTier(tierLock3);
          lockTier(tierLock4);
          disableTier(tier4);
          disableTier(tier3);
          break;

        case userScore >= 0:
          console.log("Bronze Rank!");
          lockTier(tierLock2);
          lockTier(tierLock3);
          lockTier(tierLock4);
          disableTier(tier4);
          disableTier(tier3);
          disableTier(tier2);
          break;

        default:
          console.log("Unranked! This is an error");
      }
