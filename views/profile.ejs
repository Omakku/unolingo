<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Home</title>

    <link href="/css/profile.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/navbar.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway&display=swap"
      rel="stylesheet" />

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"></script>

    <script
      src="https://kit.fontawesome.com/ae061cde5b.js"
      crossorigin="anonymous"></script>
  </head>

  <body class="container">
    <nav class="navbar navbar-dark bg-dark fixed-top">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"
          >Unolingo <i class="fa-solid fa-comments"></i
        ></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasDarkNavbar"
          aria-controls="offcanvasDarkNavbar"
          aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div
          class="offcanvas offcanvas-end text-bg-dark"
          tabindex="-1"
          id="offcanvasDarkNavbar"
          aria-labelledby="offcanvasDarkNavbarLabel">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Menu</h5>
            <button
              type="button"
              class="btn-close btn-close-white"
              data-bs-dismiss="offcanvas"
              aria-label="Close"></button>
          </div>
          <div class="offcanvas-body">
            <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/learn">Learn</a>
              </li>
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false">
                  Settings
                </a>
                <ul class="dropdown-menu dropdown-menu-dark">
                  <li>
                    <a class="dropdown-item" href="/settings"
                      >Profile Settings</a
                    >
                  </li>
                  <li>
                    <hr class="dropdown-divider" />
                  </li>
                  <li>
                    <a
                      class="dropdown-item"
                      id="logout-btn"
                      href="/auth/logout"
                      style="color: red"
                      >Log Out</a
                    >
                  </li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </nav>

    <div class="d-flex justify-content-center">
      <div class="card_profile" style="max-width: 540px">
        <div class="row g-4">
          <div class="col-md-4">
            <img
              src="/css/avatar.jpg"
              class="img-thumbnail"
              alt="profile picture"
              id="avatar" />
          </div>
          <div class="col-md-6">
            <div class="card-body">
              <h1 class="card-text" id="big_name">
                <%= myUser.first_name %> <%= myUser.last_name %>
              </h1>
              <h2 class="card-text" id="little_user">
                @<%= myUser.user_name %>
              </h2>
            </div>
          </div>
          <div class="col-md-2">
            <div class="horizontal_bar" id="rank_divider">
              Tier
              <div class="d-flex justify-content-center">
                <img id="rank_image" src="/css/Iron.png" alt="rank image" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <div class="horizontal_bar"></div>
    </div>
    <div class="d-flex justify-content-center">
      <div class="col-md-6">
        <div class="bars">
          <h6 id="someText">Your current total points earned is:</h6>
          <div
            class="progress"
            role="progressbar"
            aria-label="Info"
            aria-valuenow="50"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 30px">
            <div
              class="progress-bar bg-warning text-dark active massive-font"
              id="usahScore"
              style="width: 100%">
              <%= myUser.total_score %>
            </div>
          </div>
          <p></p>
          <h6 id="someText">Your current total number of lessons completed:</h6>
          <div
            class="progress"
            role="progressbar"
            aria-label="Info"
            aria-valuenow="50"
            aria-valuemin="0"
            aria-valuemax="100"
            style="height: 30px">
            <div
              class="progress-bar bg-info text-dark active massive-font"
              style="width: 100%">
              <%= myUser.lessons_completed %>
            </div>
          </div>
          <p></p>
          <h4 id="someText">Your progress to your next tier:</h4>
          <div
            class="progress"
            role="progressbar"
            aria-label="Warning"
            aria-valuenow="0"
            aria-valuemin="0"
            aria-valuemax="300"
            style="height: 50px">
            <div
              class="progress-bar progress-bar-striped progress-bar-animated bg-success text-dark active massive-font"
              id="progressTracker"
              style="min-width: 2.2rem"
              style="width: 0%">
              0%
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="/scripts/profile.js"></script>

    <!-- SCRIPT TO GENERATE PROGRESS TRACKER BAR -->
    <script>
      if (`<%= myUser.total_score %>` > 0) {
        userScore = `<%= myUser.total_score %>`;
      } else {
        usahScore.innerText = 0;
        userScore = 0;
      }
      console.log("User score is " + userScore);

      function updateProgressTracker() {
        if (userScore >= 1200) {
          progressTracker.style.width = "100%";
          progressTracker.innerText = "You've reached the max rank!";
        } else {
          let progressPercent = `${((userScore % 300) / 300) * 100}`;
          console.log(progressPercent);
          let progressPercentText = Math.round(progressPercent);

          progressTracker.style.width = progressPercent + `%`;
          console.log("the width is " + progressTracker.style.width);

          progressTracker.innerText = progressPercentText + `%`;
        }
      }

      if (userScore % 300 === 0 && userScore < 1200) {
        userScore = 0; // RESET WHENEVER USER REACHES NEW TIER (MULTIPLE OF 300)
      }
      updateProgressTracker();
    </script>
  </body>
</html>
