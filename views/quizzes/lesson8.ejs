<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf_8" />
    <meta name="viewport" content="width=device_width, initial_scale=1.0" />
    <title>Home</title>

    <link href="/css/lesson.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384_9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway&display=swap"
      rel="stylesheet" />
  </head>

  <body>
    <div id="blurboy">
      <div class="sticky" id="lessonGame">
        <div
          class="progress"
          role="progressbar"
          aria-valuenow="25"
          aria-valuemin="0"
          aria-valuemax="100"
          style="height: 50px">
          <div class="progress-bar" id="progressbarfull" style="width: 0%">
            <span class="hud_prefix" id="progressText"> Question </span>
          </div>
        </div>
      </div>

      <form id="lesson" action="/auth/lesson" method="POST" data-id="quiz8">
        <div class="container-sm">
          <div class="d-flex flex-column mb-3" id="lessonGame">
            <div id="hud">
              <div id="hud-item">
                <span class="hud_prefix"> Score </span>
                <h1 class="hud_text" id="score">0</h1>
              </div>
            </div>

            <h2 id="question">Question</h2>
            <div class="choice_box">
              <span class="choice_content" data-number="1">Choice1</span>
            </div>

            <div class="choice_box">
              <span class="choice_content" data-number="2">Choice2</span>
            </div>

            <div class="choice_box">
              <span class="choice_content" data-number="3">Choice3</span>
            </div>

            <div class="choice_box">
              <span class="choice_content" data-number="4">Choice4</span>
            </div>

            <input type="hidden" id="finalScore" name="finalScore" value="0" />
            <input type="hidden" id="finalTime" name="finalTime" value="0" />
            <input type="hidden" id="thisQuiz" name="quizNumber" value="8" />
          </div>
        </div>
      </form>
    </div>

    <div class="" id="submissionScreen">
      <div class="d-flex flex-column" id="submissionContent">
        <h2 class="p2" class="playerMessage">Completed! Your score was:</h2>
        <h1 class="p2" id="finalScoreText">0</h1>
        <h2 class="p2" class="playerMessage">Time to complete was:</h2>
        <h1 class="p2" id="quizTimeText">0</h1>
        <button class="choice_box" id="submitQuiz">Next!</button>
      </div>
    </div>
    <script src="/scripts/lessonGame.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"></script>
  </body>
</html>
